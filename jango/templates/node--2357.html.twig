      <script>
        function copyCode(button) {
          /* Copy the button's value text*/
          navigator.clipboard.writeText(button.value);

          /* Alert the copied text */
          var tooltip = document.getElementById(button.id + "toolTip");
          tooltip.innerHTML = "Copied: " + button.value;
          tooltip.style = ""; //clear in-line styling applied from previous setTimeout() function(s)

          /* close message automatically after timeout (useful for mobile users)*/
          setTimeout(
            function () {
              tooltip.style.visibility = "hidden";
              tooltip.style.opacity = "0";
              tooltip.style.transition = "all 0.3s"
            }, 3000);
        }
        function outFunction(toolTipDiv) {
          var span = toolTipDiv.querySelector('span')
          span.innerHTML = "Copy to clipboard";
          span.style = "";
        }
