      <script>
        function toggleCollapseSection() {
          // section title
          if (event.currentTarget.classList.contains('expanded')) {
            event.currentTarget.classList.remove('expanded');
          }
          else if (!event.currentTarget.classList.contains('expanded')) {
            event.currentTarget.classList.add('expanded');
          }
          // title's content section
          if (event.currentTarget.nextElementSibling.classList.contains('expanded')) {
            event.currentTarget.nextElementSibling.classList.remove('expanded');
          }
          else if (!event.currentTarget.nextElementSibling.classList.contains('expanded')) {
            event.currentTarget.nextElementSibling.classList.add('expanded');
          }

        }
        let product_sections = document.querySelectorAll('.product-section-title');
        for (let i = 0; i < product_sections.length; i++) {
          product_sections[i].addEventListener('click', toggleCollapseSection);
        }
