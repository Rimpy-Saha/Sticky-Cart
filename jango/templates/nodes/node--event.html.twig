<style>
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(40px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes fadeInLeft {
    from {
      opacity: 0;
      transform: translateX(-40px);
    }
    to {
      opacity: 1;
      transform: translateX(0);
    }
    }

    @keyframes fadeInRight {
    from {
      opacity: 0;
      transform: translateX(40px);
    }
    to {
      opacity: 1;
      transform: translateX(0);
    }
  }



  .event-card-grid {
    display: flex;
    flex-wrap: wrap;
    gap: 20px;
    padding: 30px 0px;
    border-radius: 10px;
    display: flex;
    flex-wrap: nowrap; 
    align-items: center; 
    gap: 30px;
    min-height: 500px;
    animation: fadeInUp 0.6s ease-out both;
  }

  .event-left {
    flex: 1;
    display: flex;
    flex-direction: column;
    transition: transform 0.4s ease, filter 0.4s ease;
    animation: fadeInLeft 0.8s ease-out both;
  }

  .event-right {
    flex: 1 1 45%;
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    gap: 16px;
    flex: 1;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    animation: fadeInRight 0.8s ease-out both;
  }

  .event-title {
    font-size: 35px;
    color: #004893;
    font-weight: 600;
    margin-bottom: 10px;
    margin-top: 30px;
    text-align: center;
  }

  .event-image-logo {
    position: relative;
    height: 100%;
    display: flex;
    flex-direction: column;
  }

  .event-main-img {
    width: 100%;
    border-radius: 10px;
    display: block;
    height: 100%;
    max-height: 500px;
    width: 100%;
    object-fit: cover;
    border-radius: 10px;
  }

  .event-logo-overlay {
    position: absolute;
    top: 20px;
    left: 20px;
    max-width: 250px;
    height: auto;
  }

  .event-detail {
    display: flex;
    align-items: center;
    gap: 12px;
    font-size: 20px;
  }

  .event-detail i {
    font-size: 22px;
    color: #222;
  }

  .event-map iframe {
    margin-top: 10px;
    border-radius: 8px;
  }

  .event-button {
    display: inline-block;
    margin-top: 15px;
    padding: 10px 20px;
    background-color: #003366;
    color: white;
    text-decoration: none;
    border-radius: 6px;
    font-weight: bold;
    animation: fadeInUp 0.6s ease-out both;
    animation-delay: 0.8s;
  }
  .field--name-field-event-logo img {
    display: block;
    position: absolute;
    top: 10px;
    left: 10px;
    width: 300px;
    height: auto;
    min-height: auto;
    border-radius: 12px 0 0 12px;
  }
  .field--name-field-event-picture img{
    border-radius: 10px;
    height: 100%;
    max-height:500px;
    object-fit: cover;
    transition: transform 0.4s ease, filter 0.4s ease;
  }

  .event-left:hover {
    transform: scale(1.03);
  }
  .event-button i {
    margin-right: 8px;
  }

  @media (max-width: 998px) {
    .event-card-grid {
      flex-direction: column;
      padding: 20px;
      gap: 20px;
    }

    .event-card-grid {
      align-items: stretch;
    }
  }
  @media (max-width: 768px) {
    .event-card-grid {
      flex-direction: column;
      padding: 20px;
      gap: 20px;
    }

    .event-left,
    .event-right {
      flex: 1 1 100%;
      width: 100%;
    }

    .event-title {
      font-size: 28px;
      text-align: center;
    }

    .event-main-img {
      max-height: 300px;
    }

    .event-detail {
      font-size: 18px;
    }

    .event-logo-overlay {
      max-width: 180px;
      top: 10px;
      left: 10px;
    }

    .event-button {
      width: 100%;
      text-align: center;
    }

    .field--name-field-event-logo img {
      width: 30%;
      top: 10px;
      left: 10px;
    }
  }
</style>

  <h2 class="event-title">{{ label }}</h2>

  <div class="event-card-grid container">
  <div class="event-left">
    <div class="event-image-logo">
            <div itemprop="name" style="visibility:hidden;opacity:0;height:0px;"> {{label}} </div>
            <span class=" events-column-img" itemprop="image">
              {{content.field_event_picture}}
            </span>      
              
        <img class = "event-logo" style = "max-width: 200px; max-height: 100px; width: auto; height: auto; object-fit: contain; display: block;"src="" > {{content.field_event_logo}}

    </div>
  </div>

  <div class="event-right">

    <div class="event-detail">
      <img style="height: 30px; position: relative;" src="/sites/default/files/images/icons/calendar_747310.png" alt="Calander Icon" <a="" href="https://www.freepik.com/icon/calendar_747310#fromView=search&amp;page=1&amp;position=0&amp;uuid=95be5cb5-bd96-4e4c-ab50-ff5b50dc46cc" title="Calander icons created by Freepik - Freepik">
      <span><strong>When:</strong> {{ node.field_event_date.0.value|date("D Y-m-d") }}</span>
    </div>

    <div class="event-detail">
      <img style="height: 30px; position: relative;" src="/sites/default/files/images/icons/clock (1).png" alt="Calander Icon" <a="" href="https://www.flaticon.com/free-icons/clock" title="Calander icons created by dmitri13 - Flaticon">
      <span itemprop="duration" content="P{{ node.field_number_of_days.value }}D"> <strong>Time: </strong> {{node.field_number_of_days.value}} {% if node.field_number_of_days.value > 1 %}days{% else %}day{% endif %}</span>

    </div>

    <div class="event-detail" style = "margin-left: 4px; gap: 15px;">
      <img src="/sites/default/files/images/icons/gps_15949802.png" style="height: 30px; display: block;" alt="Location Icon" <a="" href="https://www.freepik.com/icon/gps_15949802#fromView=search&amp;page=1&amp;position=8&amp;uuid=d16c9e2c-c20e-4544-a2fc-2e1a88c35bff" title="GPS icons created by Ihdizein - Freepik">
      <span><strong>Where:</strong> {{ node.field_event_location.value }}</span>
    </div>

    <div class="event-detail" style = "gap: 12px;">
      <img style="height: 30px; position: relative;" src="/sites/default/files/images/icons/boss_6234526.png" alt="Calander Icon" <a="" href="https://www.freepik.com/icon/boss_6234526#fromView=search&page=1&position=11&uuid=b968da62-2a94-4f5b-8c23-9e05120b6c6b" title="Boss icons created by Freepik - Freepik">
      <span><strong>Booth:</strong> {{ node.field_booth_number.value }}</span>
    </div>

    {% if node.field_event_map.value is not empty %}
      <div class="event-map">
        <iframe src="{{ node.field_event_map.value }}" width="100%" height="200" style="border:0;" allowfullscreen loading="lazy"></iframe>
      </div>
    {% endif %}

    {% if node.field_website_link.value %}
      <a href="{{ node.field_website_link.value }}" class="btn btn-primary" style = "width:250px;" target="_blank">
        <i class="fas fa-external-link-alt"></i> View Event Website
      </a>
    {% endif %}
  </div>
</div>
