{#
/**
 * @file
 *
 * Default product template.
 *
 * Available variables:
 * - attributes: HTML attributes for the wrapper.
 * - product: The rendered product fields.
 *   Use 'product' to print them all, or print a subset such as
 *   'product.title'. Use the following code to exclude the
 *   printing of a given field:
 *   @code
 *   {{ product|without('title') }}
 *   @endcode
 * - product_entity: The product entity.
 * - product_url: The product URL.
 *
 * @ingroup themeable
 */
#}
<style>
  .product-table, .format-table {
    margin-bottom: 0px;
    padding-bottom: 1em;
    width: 100%;
    max-width: calc(100% - 15px);
    overflow: auto;
    display: -ms-grid;
    -ms-grid-columns: 1fr (10px 1fr)[2];
    -ms-grid-rows: max-content (10px max-content)[5];
    display: grid;
    grid-template-columns: repeat(3,1fr);
    grid-gap: 10px;
    margin-bottom: 1em; 
  }
  .commerce-order-item-add-to-cart-form .webform-container-inline div.product-row, .commerce-order-item-add-to-cart-form .webform-container-inline div.format-row {
    background: none;
    font-size: 18px;
    border: 2px solid #ddd;
    border-radius: 12px;
    padding: 20px;
    overflow-x: auto;
    text-align: center;
    display: flex!important;
    align-items: center;
    justify-content: center;
  }
  .commerce-order-item-add-to-cart-form .webform-container-inline div.format-row:not(.active):hover, .commerce-order-item-add-to-cart-form .webform-container-inline div.product-row:not(.active):hover{
    cursor:pointer;
  }
  .commerce-order-item-add-to-cart-form .webform-container-inline div.format-row:hover, .commerce-order-item-add-to-cart-form .webform-container-inline div.product-row:hover{
    background-color: #E5ECF4;
  }
  .commerce-order-item-add-to-cart-form .webform-container-inline div.format-row hr, .commerce-order-item-add-to-cart-form .webform-container-inline div.product-row hr{
    border-top:2px solid #ddd;
  }

  .commerce-order-item-add-to-cart-form .webform-container-inline div{
    display:inline-block;
    height:100%;
  }
  .commerce-order-item-add-to-cart-form .webform-container-inline div, .commerce-order-item-add-to-cart-form .product--rendered-attribute label.option{
    width:100%;
    height:100%;
  }
  .commerce-order-item-add-to-cart-form .webform-container-inline div.form-group.has-feedback{
    margin-bottom:0px;
    display:none;
  }

  .product--rendered-attribute.fieldgroup > .fieldset-wrapper > div{
    display:grid;
    grid-template-columns:repeat(3, 1fr);
    grid-gap:1em;
  }
  .form-group.has-feedback:has(input:checked)+label .product-row, .form-group.has-feedback:has(input:checked)+label .format-row{ 
    background-color: var(--norgen-primary-blue-light);
    border:2px solid var(--norgen-primary-blue);
  } 
  .ajax-progress.ajax-progress-throbber{ 
    display: none!important;
  }
  .button--add-to-cart, .button--primary{
    background-color: var(--norgen-primary-blue);
  }
  .button--secondary-teal{
    background-color: var(--norgen-secondary-teal);
  }

  fieldset.product--rendered-attribute > legend{
    display:block;
  }


  /* Testimonials field */
  .quote-box {
    position: relative;
    margin-top: max(30px, 5%);
    margin-right: 30px;
    border-radius: 24px;
    padding: 20px 27px 40px;
    font-family: 'Ubuntu', sans-serif;
    font-size: 14px;
    height: max-content;
    transition-duration: 0.5s;
    border: 1px solid #004897;
  }
  .quote-box > p {
    overflow: hidden;
    transition: max-height 0.7s;
    max-height: 100px;
    display: inline;
  }
  .quote-box .quote-image {
    content: '\f10e';
    position: absolute;
    right: -30px;
    top: -30px;
    font-family: 'Font Awesome 5 Pro' !important;
    font-weight: 700;
    font-size: 20px;
    width: 60px;
    height: 60px;
    border-radius: 50%;
    text-align: center;
    color: #fff;
    padding: 5px;
    overflow: hidden;
    box-sizing: border-box;
  }
  .quote-box .quote-image img {
    width: 100%;
    height: 100%;
    object-fit: contain;
    border-radius: 50%;
    border: 5px solid #004897;
    background-color: #fff;
  }
  .quote-box ul {
    list-style-type: none;
    margin: 0;
    padding: 0 0 0 20px;
  }
  .quote-box li:before {
    content: 'â€”';
    padding-right: 10px;
    grid-row: span 2;
  }
  .field--name-field-commerce-product .front-featured {
    height: auto;
    max-height: 220px;
    transition: all 0.2s ease-in-out;
    display: block;
    height: 600px;
  }
  .field--name-field-commerce-product .carousel-inner-feat {
    overflow: inherit;
    overflow-x: hidden;
    height: 250px;
  }
  .field--name-field-commerce-product .carousel-inner-feat .row {
    padding: 0px 15px 0;
  }
  .field--name-field-commerce-product .carousel-indicators{
    bottom:-30px;
    margin-bottom:0px;
  }
  .field--name-field-commerce-product .carousel-indicators li {
    border: solid #1A3C93 8px;
    background-color: #FFF;
    background: #1A3C93;
    width: 16px;
    height: 16px;
    border-radius: 100%;
    opacity: 0.5;
  }
  .field--name-field-commerce-product .carousel-indicators li.active {
    background: #363636;
    opacity: 0.2;
    width: 16px;
    height: 16px;
  }
  .myBtn, .myBtn2, .myBtn3, .myBtn4, .myBtn5 {
    background-color: transparent!important;
    color: #004897;
    border: none;
    cursor: pointer;
    font-size: 16px;
    text-align: center;
  }


  .sticky-top{
    position:sticky;
    top:50px;
  }

  .product_variation_sku_wrapper{
    margin-bottom:2em;
    margin-top:-1em;
  }
  .field--name-sku{
    display:inline-block;
  }

  lite-youtube{
    max-width: 600px;
  }

  /* Related Products */
  .prodBlock{
    height:300px;
  }
  #Carouselprod .carousel-item img{
    min-height:230px;
  }

  .btn:hover{
    opacity:0.7;
  }

  .c-content-title-1 > h1{
    font-size:30px;
  }

  /* Media Queries */
  @media (min-width:992px){
    #mobile-title{
      display:none;
    }
    .mobile{
      display:none;
    }
  }
  @media (max-width:991px){
    .sticky-top{
      top:auto;
      position:static;
    }
    .desktop{
      display:none;
    }
  }

</style>

