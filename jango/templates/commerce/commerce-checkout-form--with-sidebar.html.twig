{#
/**
 * @file
 * Two column template for the checkout form.
 *
 * Available variables:
 * - form: The form.
 *
 * @ingroup themeable
 */
#}
<div class="layout-checkout-form">
  <div class="layout-region order-summary checkout-left">
  {% set items = "Item" %}
  {% if multiple_cart_items == true %}
    {% set items = "Items" %}
  {% endif %}
    <h2 class="c-font-uppercase">{% trans %} Your Cart <span style="font-size:17px;">{{ cart_count }} {{items}}</span>{% endtrans %}</h2>
    {{ form.sidebar }}
  </div>
  <div class="checkout-right">
    <div class="layout-region billing-information">
      <h2 class="c-font-uppercase">{% trans %} Checkout {% endtrans %}</h2>
      {{ form|without('sidebar', 'actions') }}
    </div>
    <div class="layout-region layout-region-checkout-footer notranslate">
      {{ form.actions }}
    </div>
  </div>
</div>
